<% layout('base') -%>

<% script('//api.filepicker.io/v1/filepicker.js') -%>


<div id="img-wrapper">
	<!-- <img id="img1" src="http://gifpop-uploads.s3.amazonaws.com/<%=key%>"> -->
	<h2>Nice find! Now pick the second:</h2>
	<div class="img-box"></div>
	<div class="img-box">?</div>
</div>
<iframe id="picker"></iframe>

<style>
	#img-wrapper {
		width: 875px;
		min-height: 100px;
	}
	#img1 {
		max-width: 400px;
		max-height: 200px;
		display: block;
		float: right;
	}
	#picker {
		width: 875px;
		height: 500px;
		border: none;
	}
	h2 {
		font-family: Futura;
		text-transform: uppercase;
		width: 875px;
		text-align: center;
	}
	.img-box {
		width: 437px;
		height: 215px;
		float: left;
		background-image: url(http://meshu.io/static/gifpop/img/starburst-wide.png);
		background-color: #808080;
		background-position: center;
		border: solid #eee;
		box-sizing: border-box;
		border-width: 10px 5px;
		margin-bottom: 10px;
		font-size: 170px;
		text-align: center;
		line-height: 204px;
	}
	.img-box:nth-child(even) {
		border-left-width: 10px;
		background-image: url(http://gifpop-uploads.s3.amazonaws.com/<%=key%>);
		background-size: cover;
	}
	.img-box:nth-child(odd) {
		border-right-width: 10px;
	}
</style>

<script type="text/javascript">

	filepicker.setKey("AYkBZ0oUOTTqvkwhxMx3Ez");

	filepicker.pickAndStore({
			mimetype: 'image/*',
			container: 'picker',
			services: ['COMPUTER','URL','INSTAGRAM','FACEBOOK','FLICKR']
		},{
			path: '/uploads/<%=scan_id%>/'
		},function(InkBlobs){
	   		// console.log(JSON.stringify(InkBlobs));
	   		var id = InkBlobs[0].url.split("/")[5];
	   		window.location = "<%=base_url%>/flipflop/?id0=<%=doc_id%>&key0=<%=key%>&id1="+id+"&key1="+InkBlobs[0].key;
		},function(FPError){ console.log(FPError); }
	);

</script>