<% layout('base') -%>

<% script('//api.filepicker.io/v1/filepicker.js') -%>

<iframe id="picker"></iframe>

<style>
	#picker {
		width: 875px;
		height: 490px;
		border: none;
	}
</style>

<script type="text/javascript">

	filepicker.setKey("AYkBZ0oUOTTqvkwhxMx3Ez");

	filepicker.pickAndStore({
			multiple: 'true',
			mimetype: 'image/*',
			container: 'picker',
			services: ['COMPUTER','FACEBOOK','FLICKR','INSTAGRAM']
		},{
			path: '/uploads/<%=scan_id%>/'
		},function(InkBlobs){
	   		// console.log(JSON.stringify(InkBlobs));
	   		var id0 = InkBlobs[0].url.split("/")[5],
	   			id1 = InkBlobs[1].url.split("/")[5];
	   		window.location = "<%=base_url%>/flipflop/?id0="+id0+"&key0="+InkBlobs[0].key+"&id1="+id1+"&key1="+InkBlobs[1].key;
		},function(FPError){ console.log(FPError); }
	);

</script>