<% layout('base') -%>

<% script('//api.filepicker.io/v1/filepicker.js') -%>

<h2>Pick the first of your two images:</h2>
<iframe id="picker"></iframe>

<style>
	.wrapper {
		width: 875px;
		background-color: #eee;
	}
	h2 {
		font-family: Futura;
		text-transform: uppercase;
		font-weight: normal;
		font-size: 24px;
		color: #808080;
		-webkit-font-smoothing: antialiased;
		transform: skew(-7deg);
		-ms-transform: skew(-7deg);
		-moz-transform: skew(-7deg);
		-webkit-transform: skew(-7deg);
		-o-transform: skew(-7deg);
		margin: 0;
		padding: 10px 0 10px 10px;
	}
	#picker {
		width: 100%;
		height: 500px;
		border: none;
	}
</style>

<script type="text/javascript">

	filepicker.setKey("AYkBZ0oUOTTqvkwhxMx3Ez");

	filepicker.pickAndStore({
			mimetype: 'image/*',
			container: 'picker',
			services: ['COMPUTER','URL','INSTAGRAM','FACEBOOK','FLICKR']
		},{
			path: '/uploads/<%=scan_id%>/'
		},function(InkBlobs){
	   		// console.log(JSON.stringify(InkBlobs));
	   		var id0 = InkBlobs[0].url.split("/")[5];
	   		window.location = "<%=base_url%>/upload-flipflop2/?id0="+id0+"&key0="+InkBlobs[0].key;
		},function(FPError){ console.log(FPError); }
	);

</script>